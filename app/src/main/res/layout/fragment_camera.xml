<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/darker_gray"
    tools:context=".CameraFragment">

    <com.example.cameraview.CameraView
        android:id="@+id/camera_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:background="@android:color/black"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_flash_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_flash_auto"/>
        <ImageView
            android:id="@+id/iv_camera_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_flash_switch"
            android:src="@drawable/ic_switch_camera"/>
        <ImageView
            android:id="@+id/iv_aspect_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/iv_camera_switch"
            android:src="@drawable/ic_aspect_ratio"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_show_time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:visibility="invisible"
            android:textSize="18sp"
            android:textColor="@color/setting_item_text_color_normal"
            android:drawableStart="@drawable/recording_point"
            android:text="@string/default_recording_time"/>
        <ImageView
            android:id="@+id/iv_video_controller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_show_time_view"
            android:visibility="invisible"
            android:layout_marginStart="10dp"
            android:src="@drawable/recording_pause"/>
    </RelativeLayout>
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/iv_last_thumb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:layout_margin="20dp"
        android:src="@drawable/btn_album"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_take_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_camera"
        android:layout_gravity="bottom|center_horizontal"
        app:useCompatPadding="true"/>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fb_video_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        app:srcCompat="@drawable/ic_videocam_black_24dp"
        app:useCompatPadding="true"/>
</FrameLayout>